# All my aliases in one place

alias nv=nvim
alias k=kubectl
alias jj=juju
alias os=openstack

# Moving up dirs easier
alias ..='cd ..'
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# For Chezmoi (https://www.chezmoi.io/quick-start/)
alias cz=chezmoi
alias czd=chezmoi-cd
alias cze='chezmoi edit --apply'

# Easy delete file
alias del='rm -rfi'

# Git aliases
alias gs='git status -sb' # short status + show branch
alias gd='git diff'
alias gpl='git pull'
alias gps='git push'
alias gpf='git push -f' # force push
alias gc='git commit -ev'
alias ga='git add --all'
alias gt='git log --graph --oneline --decorate' # pretty git tree log
alias gcan='git add . && git commit --amend --no-edit'
alias gco='git checkout'

# For easy juju status monitoring
alias jsw='watch -n1 --color juju status --color'

# Find out what is taking so much space on your drives
alias diskspace="du -S | sort -n -r | less"

# Hacker screen
alias hacker="cat /dev/urandom | hexdump -C | grep 'ca fe'"
